{
  "name": "node_auth",
  "version": "0.1.3",
  "description": "A node authentication package for express.js that offers an API for users to login, signup and see their profile. Also, it can be configured to specify the access rights to routes.",
  "main": "./dist/lib/index.js",
  "scripts": {
    "start": "node dist/example/server.js",
    "build": "tsc",
    "postinstall": "typings install && tsc",
    "simpletest": "mocha -- -u tdd --timeout 999999 --colors dist/tests/**/*.spec.js",
    "test": "istanbul cover node_modules/mocha/bin/_mocha -- -u tdd --timeout 999999 --colors dist/tests/**/*.spec.js",
    "posttest": "codecov -f coverage/coverage.json"
  },
  "keywords": [
    "node",
    "express",
    "mongodb",
    "authentication",
    "user management",
    "login",
    "jwt",
    "json",
    "web",
    "token"
  ],
  "author": "Erik Vullings <erik.vullings@gmail.com>",
  "license": "MIT",
  "typings": "./dist/lib/index",
  "files": [
    "./dist/lib/"
  ],
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/express": "^4.0.35",
    "@types/mocha": "^2.2.38",
    "@types/mongoose": "^4.7.8",
    "@types/node": "^7.0.8",
    "@types/sinon": "^1.16.34",
    "bluebird": "^3.5.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "codecov": "^1.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mongoose-mock": "^0.4.0",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.7",
    "typescript": "^2.2.1",
    "typings": "^2.1.0"
  },
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.15.2",
    "config": "^1.24.0",
    "express": "^4.15.2",
    "jsonwebtoken": "^7.2.1",
    "lokijs": "^1.4.2",
    "mongoose": "^4.7.7",
    "morgan": "^1.7.0",
    "nodemailer": "^2.7.2",
    "nodemailer-mailgun-transport": "^1.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TNOCS/node-auth.git"
  },
  "bugs": {
    "url": "https://github.com/TNOCS/node-auth/issues"
  },
  "homepage": "https://github.com/TNOCS/node-auth#readme"
}
